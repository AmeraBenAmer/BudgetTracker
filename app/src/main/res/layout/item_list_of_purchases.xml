<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.devamsba.managebudget.feat_purchases.presentation.PurchasesViewModel" />


        <variable
            name="purchasesEntity"
            type="com.devamsba.managebudget.feat_purchases.domain.entity.ItemDetails" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="3dp"
        android:gravity="center_vertical"
        app:cardBackgroundColor="@color/white"
        card_view:cardCornerRadius="2dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_10sdp">


            <!--                android:onTextChanged="@{viewModel.textChange()}"
            -->
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/productNameEditText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:background="@drawable/bg_edit_text"
                android:hint="product details"
                android:imeOptions="actionNext"
                android:maxLines="2"
                android:inputType="numberDecimal"
                android:padding="@dimen/_7sdp"
                android:textColor="#53555b"

                android:textColorHint="#53555b"
                android:textSize="@dimen/_12sdp"
                app:layout_constraintEnd_toStartOf="@+id/productPriceEditText"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>


            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/productPriceEditText"
                android:layout_width="@dimen/_70sdp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@drawable/bg_edit_text"
                android:hint="500 Dly"
                android:imeOptions="actionNext"
                android:inputType="numberDecimal"
                android:padding="@dimen/_7sdp"
                android:textColor="#53555b"
                android:textColorHint="#53555b"
                android:textSize="@dimen/_12sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/productNameEditText"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</layout>