<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="font_size_16_bold">
        <item name="fontFamily">@font/tajawal_bold</item>
        <item name="android:textSize">@dimen/_16ssp</item>
        <item name="android:textColor">@color/gray_600</item>
    </style>

    <style name="font_size_12_bold">
        <item name="fontFamily">@font/tajawal_bold</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:textColor">@color/gray_600</item>
    </style>
    <style name="font_size_14_bold">
        <item name="fontFamily">@font/tajawal_bold</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:textColor">@color/gray_600</item>
    </style>

    <style name="font_size_12_medium">
        <item name="fontFamily">@font/tajawal_medium</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:textColor">@color/gray_600</item>
    </style>
    <style name="font_size_14_medium">
        <item name="fontFamily">@font/tajawal_medium</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:textColor">@color/gray_600</item>
    </style>
    <style name="font_size_8_medium">
        <item name="fontFamily">@font/tajawal_medium</item>
        <item name="android:textSize">@dimen/_8ssp</item>
        <item name="android:textColor">@color/gray_600</item>
    </style>
    <style name="font_size_10_medium">
        <item name="fontFamily">@font/tajawal_medium</item>
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="android:textColor">@color/gray_600</item>
    </style>

    <style name="font_size_18_medium">

        <item name="fontFamily">@font/tajawal_medium</item>
        <item name="android:textSize">@dimen/_18ssp</item>
        <item name="android:textColor">@color/gray_600</item>
    </style>

    <style name="font_size_18_bold">

        <item name="fontFamily">@font/tajawal_extrabold</item>
        <item name="android:textSize">@dimen/_18ssp</item>
        <item name="android:textColor">@color/gray_600</item>
    </style>

    <style name="Widget.MyApp.Spinner.ThemeOverlay.AutoCompleteTextView"
        parent="Widget.AppCompat.AutoCompleteTextView">
        <item name="background">@null</item>
        <item name="android:padding">@dimen/_10sdp</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:textColor">@color/gray_600</item>
    </style>
    <style name="Widget.MyApp.Spinner.ThemeOverlay.TextView"
        parent="Widget.AppCompat.AutoCompleteTextView">
        <item name="background">@null</item>
        <item name="android:padding">@dimen/_10sdp</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:textColor">@color/gray_600</item>
    </style>

    <style name="Widget.MyApp.Spinner" parent="Widget.Material3.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu">
        <item name="boxBackgroundColor">@color/transparent</item>
        <item name="boxStrokeColor">@color/gray_200</item>
        <item name="boxStrokeErrorColor">@color/red_200</item>
        <item name="errorEnabled">true</item>
        <item name="android:textColorHint">@color/gray_200</item>
        <item name="materialThemeOverlay">@style/Theme.MyApp.Spinner.ThemeOverlay</item>
    </style>

    <style name="Theme.MyApp.Spinner.ThemeOverlay" parent="">
        <item name="autoCompleteTextViewStyle">@style/Widget.MyApp.Spinner.ThemeOverlay.AutoCompleteTextView</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/white</item>
    </style>
    <style name="Widget.MyApp.SpinnerItem" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_20ssp</item>
        <item name="android:ellipsize">end</item>
        <item name="maxLines">1</item>
        <item name="android:padding">@dimen/_16ssp</item>
    </style>

</resources>